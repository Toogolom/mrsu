<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context=".MainActivity_lk">


    <TextView
        android:id="@+id/tv_id"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_above="@+id/b_nav"
        android:layout_alignStart="@+id/tv_FIO"
        android:layout_alignEnd="@+id/tv_FIO"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="296dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_FIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_nav"
        android:layout_alignStart="@+id/butt_dowland_im"
        android:layout_alignEnd="@+id/butt_dowland_im"
        android:layout_marginStart="-22dp"
        android:layout_marginEnd="-17dp"
        android:layout_marginBottom="345dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_LK"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="43dp"
        android:gravity="center"
        android:text="Личный кабинет"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/butt_dowland_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="456dp"
        android:backgroundTint="@color/grey"
        android:text="Загрузить изображения"
        android:textSize="11sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/b_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/purple"
        app:itemIconTint="@drawable/b_nav_selector"
        app:itemTextColor="@color/white"
        app:menu="@menu/buttom_menu" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_above="@+id/butt_dowland_im"
        android:layout_alignStart="@+id/butt_dowland_im"
        android:layout_alignEnd="@+id/butt_dowland_im"
        android:layout_marginStart="-47dp"
        android:layout_marginEnd="-21dp"
        android:layout_marginBottom="17dp"
        app:srcCompat="@drawable/no_avatar" />

</RelativeLayout>